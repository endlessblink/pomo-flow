{
  "name": "pomo-flow",
  "version": "1.0.0",
  "description": "Multi-view productivity app with integrated task management and pomodoro timer - Vue 3 Edition",
  "main": "src/main.ts",
  "type": "module",
  "scripts": {
    "dev": "vite --port 5546",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "test": "vitest",
    "test:watch": "vitest --ui",
    "lint": "eslint src --ext ts,vue --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,vue --fix",
    "generate-tokens": "node scripts/generate-tokens.js",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "keywords": [
    "productivity",
    "pomodoro",
    "task-management",
    "canvas",
    "multi-view",
    "vue3"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@formkit/auto-animate": "^0.9.0",
    "@headlessui/vue": "^1.7.23",
    "@heroicons/vue": "^2.2.0",
    "@vue-flow/background": "^1.3.2",
    "@vue-flow/controls": "^1.1.3",
    "@vue-flow/core": "^1.47.0",
    "@vue-flow/minimap": "^1.5.4",
    "@vue-flow/node-resizer": "^1.5.0",
    "@vueuse/core": "^10.11.1",
    "@vueuse/gesture": "^2.0.0",
    "date-fns": "^3.6.0",
    "devtools-debugger-mcp": "github:ScriptedAlchemy/devtools-debugger-mcp",
    "konva": "^9.2.0",
    "localforage": "^1.10.0",
    "lucide-vue-next": "^0.294.0",
    "naive-ui": "^2.43.1",
    "pinia": "^2.1.7",
    "qalendar": "^3.9.0",
    "uuid": "^9.0.1",
    "vue": "^3.4.0",
    "vue-cal": "^4.10.2",
    "vue-konva": "^3.0.2",
    "vue-router": "^4.2.5",
    "vuedraggable": "^4.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@tauri-apps/api": "^1.5.3",
    "@tauri-apps/cli": "^1.5.8",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.3",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-storybook": "^9.1.10",
    "eslint-plugin-vue": "^9.19.2",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vitest": "^1.0.4",
    "vue-tsc": "^1.8.25"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
