{
  "name": "pomo-flow",
  "version": "1.0.0",
  "description": "Multi-view productivity app with integrated task management and pomodoro timer - Vue 3 Edition",
  "main": "src/main.ts",
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 5546",
    "build": "npx vite build --mode production",
    "build:mobile": "npx vite build --mode production && npx cap sync",
    "preview": "vite preview",
    "tauri": "tauri",
    "mobile:android": "npm run build:mobile && npx cap open android",
    "mobile:ios": "npm run build:mobile && npx cap open ios",
    "mobile:sync": "npx cap sync",
    "mobile:run:android": "npm run build:mobile && npx cap run android",
    "mobile:run:ios": "npm run build:mobile && npx cap run ios",
    "test": "vitest",
    "test:watch": "vitest --ui",
    "test:safety": "vitest run tests/safety/",
    "lint": "eslint src --ext ts,vue --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,vue --fix",
    "validate:imports": "node scripts/validate-imports.js",
    "validate:css": "node scripts/validate-css.js",
    "validate:dependencies": "vitest run tests/safety/dependencies.test.ts",
    "validate:all": "npm run validate:imports && npm run validate:css && npm run validate:dependencies && npm run lint",
    "generate-tokens": "node scripts/generate-tokens.js",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "skill-logs": "node .claude/skill-logger.js",
    "skill-logs:recent": "node .claude/skill-logger.js recent",
    "skill-logs:metrics": "node .claude/skill-logger.js metrics",
    "skill-logs:analyze": "node .claude/utils/log-analyzer.js patterns",
    "skill-logs:performance": "node .claude/utils/log-analyzer.js performance",
    "skill-logs:export": "node .claude/utils/log-analyzer.js export json 7",
    "skill-logs:cleanup": "node .claude/skill-logger.js cleanup",
    "skill-logs:server": "node .claude/mcp-logging-server/server.js",
    "skill-logs:start": "node start-skill-monitoring-simple.js",
    "skill-logs:dashboard": "node start-dashboard-server.js",
    "skill-logs:monitor": "node simple-skill-monitor.js",
    "skill-monitor": "node simple-skill-monitor.js",
    "skill-dashboard": "node simple-skill-monitor.js",
    "skill-monitor:full": "node start-skill-monitoring-simple.js"
  },
  "keywords": [
    "productivity",
    "pomodoro",
    "task-management",
    "canvas",
    "multi-view",
    "vue3"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@brave/brave-search-mcp-server": "^2.0.54",
    "@capacitor/android": "^7.4.3",
    "@capacitor/haptics": "^7.0.2",
    "@capacitor/ios": "^7.4.3",
    "@capacitor/local-notifications": "^7.0.3",
    "@capacitor/push-notifications": "^7.0.3",
    "@formkit/auto-animate": "^0.9.0",
    "@headlessui/vue": "^1.7.23",
    "@heroicons/vue": "^2.2.0",
    "@vue-flow/background": "^1.3.2",
    "@vue-flow/controls": "^1.1.3",
    "@vue-flow/core": "^1.47.0",
    "@vue-flow/minimap": "^1.5.4",
    "@vue-flow/node-resizer": "^1.5.0",
    "@vueuse/core": "^10.11.1",
    "@vueuse/gesture": "^2.0.0",
    "date-fns": "^3.6.0",
    "devtools-debugger-mcp": "github:ScriptedAlchemy/devtools-debugger-mcp",
    "konva": "^9.2.0",
    "localforage": "^1.10.0",
    "lucide-vue-next": "^0.294.0",
    "naive-ui": "^2.43.1",
    "pinia": "^2.1.7",
    "qalendar": "^3.9.0",
    "uuid": "^9.0.1",
    "vue": "^3.4.0",
    "vue-cal": "^4.10.2",
    "vue-i18n": "^9.14.5",
    "vue-konva": "^3.0.2",
    "vue-router": "^4.2.5",
    "vuedraggable": "^4.1.0",
    "ws": "^8.18.3",
    "y-indexeddb": "^9.0.12",
    "y-websocket": "^3.0.0",
    "yjs": "^13.6.27"
  },
  "devDependencies": {
    "@capacitor/cli": "^7.4.3",
    "@capacitor/core": "^7.4.3",
    "@chromatic-com/storybook": "^4.1.1",
    "@intlify/unplugin-vue-i18n": "^11.0.1",
    "@playwright/test": "^1.40.1",
    "@storybook/addon-a11y": "^9.1.12",
    "@storybook/addon-docs": "^9.1.12",
    "@storybook/addon-onboarding": "^9.1.12",
    "@storybook/addon-vitest": "^9.1.12",
    "@storybook/vue3-vite": "^9.1.12",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@tauri-apps/api": "^1.5.3",
    "@tauri-apps/cli": "^1.5.8",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.8.1",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/browser": "3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.3",
    "autoprefixer": "^10.4.16",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "eslint": "^8.55.0",
    "eslint-plugin-storybook": "^9.1.12",
    "eslint-plugin-vue": "^9.19.2",
    "express": "^5.1.0",
    "happy-dom": "^20.0.0",
    "helmet": "^8.1.0",
    "jsdom": "^27.0.0",
    "nodemon": "^3.1.10",
    "playwright": "^1.56.0",
    "postcss": "^8.4.32",
    "puppeteer": "^24.24.0",
    "storybook": "^9.1.12",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.10",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.1.1"
  }
}
